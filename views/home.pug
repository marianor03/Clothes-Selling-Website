extends layout

block content
  section.hero
    video.hero-video(autoplay loop muted playsinline)
      source(src="/videos/banner.mp4", type="video/mp4")
      Your browser does not support the video tag.

    .overlay

    .hero-content
      h1 The Drop Has Landed
      a.btn(href="/shop") Shop Now

  .bottom-nav
    ul.nav-links
      li: a(href="/") Home
      li: a(href="/shop") Shop
      li: a(href="/about") About
      li: a(href="/contact") Contact
